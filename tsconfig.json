{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "moduleResolution": "node",
    "outDir": "assets/dist/",
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "allowJs": false,
    "removeComments": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "assets/scripts/",
    "rootDir": "assets/scripts/",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"],
}
